{
  "api": {
    "baseUrl": "http://localhost:8080",
    "timeout": 30
  },
  "server": {
    "name": "mcp-bridge",
    "version": "1.0.0",
    "description": "REST API to MCP Bridge Server"
  },
  "headers": {
    "Content-Type": "application/json"
  },
  "endpoints": [
    {
      "name": "custom_search",
      "description": "Search users by name",
      "method": "GET",
      "path": "/users/search",
      "parameters": [
        {
          "name": "q",
          "type": "string",
          "required": true,
          "description": "Search query",
          "in": "query"
        },
        {
          "name": "limit",
          "type": "integer",
          "required": false,
          "description": "Maximum number of results",
          "default": 10,
          "in": "query"
        }
      ]
    }
  ]
}